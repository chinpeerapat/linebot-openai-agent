# OpenAI Configuration
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o

# LINE Bot Configuration
CHANNEL_SECRET=your_line_channel_secret_here
CHANNEL_ACCESS_TOKEN=your_line_channel_access_token_here

# Optional Vector Store Configuration
VECTOR_STORE_ID=your_vector_store_id_here  # Optional

# Feature Configuration
WEB_SEARCH_CONTEXT_SIZE=low  # Options: low, medium, high
IMAGE_DETAIL_LEVEL=high      # Options: low, high, auto

# Performance Settings
ENABLE_CACHING=true
CACHE_TTL_SECONDS=3600
USE_DIRECT_MEDIA=true

# Conversation State Management
ENABLE_RESPONSE_CHAINING=true  # Use previous_response_id for chaining
USE_NEW_CONVERSATION_STATE=true  # Use improved conversation state management
INTELLIGENT_TRUNCATION=true  # Use intelligent history truncation 